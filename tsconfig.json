{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "types": ["node", "jest"],
    "typeRoots": ["./backend/node_modules/@types"]
  },
  "include": ["tests/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "backend", "mobile"]
}
